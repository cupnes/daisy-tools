#!/bin/sh

set -uex

if [ $# -ne 1 ]; then
	echo "Usage: $0 NUM_CODES" 1>&2
	exit 1
fi

num_codes=$1

mkdir -p code

for i in $(seq -w ${num_codes}); do
	echo -en '\x03\x00\x00\x00\x00\x00\x00\x00\x48\x31\xff\x00\x00\x00\x00\x00' >code/xor_rdi_rdi_${i}
	echo -en '\x07\x00\x00\x00\x00\x00\x00\x00\x48\xc7\xc0\x3c\x00\x00\x00\x00' >code/mov_60_rax_${i}
	echo -en '\x02\x00\x00\x00\x00\x00\x00\x00\x0f\x05\x00\x00\x00\x00\x00\x00' >code/syscall_${i}
	echo -en '\x01\x00\x00\x00\x00\x00\x00\x00\xc3\x00\x00\x00\x00\x00\x00\x00' >code/ret_${i}
done
